@model Domain.Entities.CustomerPayment
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">      
        <div class="modal-body">
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />    
            <input type="hidden" asp-for="IsActive" />
            <input type="hidden" asp-for="CustomerReceipt_id" />
            <div class="row">
                <label style="font-size: medium;" class="col-sm-5">
                    <b>Remaining Balance :</b>
                </label>
                <label id="RemainingBal" style="font-size: medium;" class="col-sm-3">

                </label>
            </div>
            <div class="form-group">
                <label style="margin-top: 10px; font-size: medium;" asp-for="PaymentDate" class="control-label mandatory">Payment Date</label>
                <input style="margin-top:5px;" type="date" asp-for="PaymentDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="margin-top: 10px; font-size: medium;" asp-for="PaymentMethod_id" class="control-label mandatory">Payment Method</label>
                <select style="margin-top:5px;" asp-for="PaymentMethod_id" class="form-control form-select" asp-items="@ViewBag.PaymentMethods">
                </select>
            </div>            
    </div>
</div>

<script>
    $(document).ready(function () {
        setTimeout(() => {
            $("#PaymentAmount").focus();
        }, "1000");
    })
</script>
