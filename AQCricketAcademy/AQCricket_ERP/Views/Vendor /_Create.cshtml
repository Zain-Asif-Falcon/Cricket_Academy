@model Domain.Entities.Vendor;

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">         
        </div>
        <div class="modal-body">
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="UpdatedAt" />
            <input type="hidden" asp-for="UpdatedBy" />
            <input type="hidden" asp-for="IsActive" />
            <div class="form-group">
                <label style="font-size: medium;" class="control-label mandatory">Name</label>
                <input style="margin-top:5px;" asp-for="VendorName" class="form-control" />
                <span asp-validation-for="VendorName"></span>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label style="margin-top: 10px; font-size: medium;" class="control-label mandatory">Contact No</label>
                    <input style="margin-top:5px;" maxlength="14" asp-for="VendorContact" class="form-control" />
                    <span asp-validation-for="VendorContact"></span>
                </div>              
        </div>       
    </div>
</div> 
